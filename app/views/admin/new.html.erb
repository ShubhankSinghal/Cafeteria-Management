<div class="signup-page sidebar-collapse">
<div class="page-header header-filter login-background">
    <div class="container">
      <div class="row">
        <div class="col-md-5 ml-auto mr-auto">
          <div class="card card-signup">
            <h2 class="card-title text-center">New User</h2>
            <div class="card-body">
              <div class="row">
                <div class="col-md-11 mr-auto justify-content-center">
                  <div class="form">
                    <%= form_with(url: "/admin", method: "post") do |form| %>
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">face</i>
                          </span>
                        </div>
                        <%= form.text_field :first_name, class: "form-control", autofocus: true, placeholder: "First Name..." %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">face</i>
                          </span>
                        </div>
                        <%= form.text_field :last_name, class: "form-control", placeholder: "Last Name..." %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">mail</i>
                          </span>
                        </div>
                        <%= form.email_field :email, class: "form-control", placeholder: "Email..." %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">lock_outline</i>
                          </span>
                        </div>
                        <%= form.password_field :password, class: "form-control", placeholder: "Password..." %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">fingerprint</i>
                          </span>
                        </div>
                        <%= select_tag(:role, options_for_select([["owner", 0], ["clerk", 1]], 0), class: "btn btn-primary") %>
                      </div>
                    </div>
                    <div class="text-center">
                      <%= form.submit "Add User", class: "btn btn-rose btn-round" %>
                    </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
