<div class="login-page sidebar-collapse">
  <div class="page-header header-filter login-background">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
          <div class="form">
          <% opt = []
             MenuCategory.all.each do |cat|
               opt << [cat.name, cat.id]
             end %>
            <%= form_with(url: "/updateMenu/#{@menu.id}", method: "put") do |form| %>
              <div class="card card-login card-hidden">
                <div class="card-header card-header-primary text-center">
                  <h4 class="card-title">Update</h4>
                </div>
                <div class="card-body ">
                  <<div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">face</i>
                          </span>
                        </div>
                        <%= form.text_field :name, class: "form-control", autofocus: true, value: @menu.name %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">face</i>
                          </span>
                        </div>
                          <%= form.text_field :description, class: "form-control", value: @menu.description %>
                        </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">mail</i>
                          </span>
                        </div>
                          <%= form.text_field :price, class: "form-control", value: @menu.price %>
                        </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">fingerprint</i>
                          </span>
                        </div>
                        <%= select_tag(:menu_category_id, options_for_select(
                              opt, MenuCategory.find(@menu.menu_category_id).name
                            ), class: "btn btn-primary btn-lg") %>
                        </div>
                    </div>
                  <div class="card-footer justify-content-center">
                    <%= form.submit "update menu", class: "btn btn-rose btn-round" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
